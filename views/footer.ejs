			</div>
		</div>
	</div>
</div>
<script>
	$(document).ready(function() {
		$.get("/loggedIn", {}, function(data) {
			var log = data.loggedIn;
			if (!log) {
				$("#if-lo").show();
			}
			else {
				$("#username").text(data.user);
				$("#if-li").show();
			}
		});
		$("a#logout").click(function(e) {
			e.preventDefault();
			$.post("/logout", {}, function(data) {
				window.location = "/admin";
			});
		});
	});
</script>