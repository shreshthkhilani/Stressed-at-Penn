<% layout( 'layout' ) -%>
<br>
<div class="comtainer" align="center">
	<h3 align="center"><span id="count"></span> <small>people are also stressed</small></h3>
</div>

<div class="container">
	<div class="row" id="gallery">

	</div>
</div>
<br>

<script>
	$(document).ready(function() {
		$.get("/getGrid", {}, function(data) {
			console.log(data);
			$("#gallery").text("");
			for (var i = 0; i < data.length; i++) {
				$("#gallery").append('<div class="col-lg-2" align="center" style="overflow:hidden;height:180px;padding-top:20px;">' + 
					'<img src="' + data[i] + '" style="height:100%;">' 
					+ '</div>');
			}
			$.get("/getCount", {}, function(data) {
				$("#count").text(data.count);
			});
		});
	});
</script>